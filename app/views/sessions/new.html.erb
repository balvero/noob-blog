<div class="container">
  <div class="page-header">
    <h1>Login</h1>
  </div>
  <div class="col-md-6 col-md-offset-4">

    <%= simple_form_for(:session, :html => {url: login_path}) do |f| %>
        <%= f.input :email, placeholder: 'user@domain.com' %>
        <%= f.input :password %>
        <%= f.button :submit, 'Login', class:'btn btn-success' %>
        <%= link_to 'Cancel', root_path, :class => 'btn btn-default' %>
    <% end %>
    <p>No account? <%= link_to 'Sign up here.', signup_path %> </p>
  </div>
</div>