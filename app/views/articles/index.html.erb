<div class="page-header">
  <h1>All Articles</h1>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to "Create Article", new_article_path, :class => 'btn btn-success' %>
  </div>
  <% @articles.each do |article| %>
    <div class="article-list col-md-12">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <div class="meta">Posted on: <span><%= article.created_at.to_s(:long) %></span></div>
      <div class="summary">
        <%= article.description %>
      </div>
      <div class="actions">
        <%= link_to 'Edit', edit_article_path(article), :class => 'btn-sm btn-info' %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn-sm btn-danger' %>
      </div>
    </div>
  <% end %>
</div>