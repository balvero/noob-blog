<%= render 'shared/errors', obj: @user %>

<%= simple_form_for @user do |f| %>

    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.submit(@user.new_record? ? 'Sign Up' : 'Update', :class => 'btn btn-success' ) %>
    <%= link_to 'Cancel', articles_path, :class => 'btn btn-default' %>

<% end %>