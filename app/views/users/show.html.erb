<div class="container">
  <div class="page-header">
    <h1 class="center"><%= @user.username%>'s Profile</h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= gravatar_for @user, size: 120 %>
    </div>
  </div>
    <hr />
  <div class="row">
    <div class="col-md-12">
    <h4 class="center"><%= pluralize(@user.articles.count, 'article') if @user.articles %></h4>
      <%= render 'articles/article', obj: @user_articles %>
      <div class="center">
        <%= will_paginate @user_articles %>
      </div>
    </div>
  </div>


</div>